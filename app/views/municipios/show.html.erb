<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">Exibir</h1>
  <div class="btn-toolbar mb-2 mb-md-0">
    <div class="btn-group me-2">
      <%= link_to "Editar", edit_municipio_path(@municipio), class: 'btn btn-sm btn-outline-secondary' %>
      <%= link_to "Voltar para a listagem", municipios_path, class: 'btn btn-sm btn-outline-secondary' %>
    </div>
    <%= button_to "Excluir", @municipio, method: :delete, class: 'btn btn-sm btn-outline-danger' %>
  </div>
</div>

<%= render @municipio %>