
<input id="searchbar" class="form-control form-control-dark w-100 rounded-0 border-0" type="text" placeholder="Buscar por Nome do municipe..." value="<%=params[:nome_completo]%>" aria-label="Search">

<script>
  const searchbar = document.getElementById('searchbar');
  searchbar.addEventListener('keyup', function(e){
    let key = e.which || e.keyCode;
    if (key == 13) { 
      let search = searchbar.value;
      window.location.href = `/municipes?nome_completo=${search}`;
    }
  });
</script>